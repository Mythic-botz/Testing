# config.py
import os
from pathlib import Path
from dotenv import load_dotenv

# Load .env file
load_dotenv()

# Base paths
BASE_DIR = Path(__file__).resolve().parent
DOWNLOADS_DIR = BASE_DIR / "downloads"
DOWNLOADS_DIR.mkdir(exist_ok=True)

# Bot credentials
BOT_TOKEN = os.getenv("BOT_TOKEN")
API_ID = int(os.getenv("API_ID"))
API_HASH = os.getenv("API_HASH")

# Important IDs & usernames
OWNER_ID = int(os.getenv("OWNER_ID", "0"))
BOT_USERNAME = os.getenv("BOT_USERNAME", "@YourBotName").lstrip("@")

# Bot settings
PREFIXES = ["/", "!", "."]          # command prefixes
MAX_FILE_SIZE_MB = 1800             # almost 2GB (Telegram Bot API limit)
DEFAULT_THUMBNAIL = None            # can be path to default thumb later

# yt-dlp default options
YTDLP_CONFIG = {
    "format": "bestvideo[ext=mp4]+bestaudio[ext=m4a]/best[ext=mp4]/best",
    "merge_output_format": "mp4",
    "outtmpl": str(DOWNLOADS_DIR / "%(id)s.%(ext)s"),
    "quiet": True,
    "no_warnings": True,
    # "continuedl": True,
    # "cookiesfrombrowser": ("chrome",),  # uncomment for private videos
}

# Messages
